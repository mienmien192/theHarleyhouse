<div class="container mt-5">
    <center>
        <h1 style="color: green; margin-top:100px">Danh mục sản phẩm</h1>
    </center>
    <a href="/category/add" type="button" class="btn btn-outline-success">Thêm danh mục</a> <br>
    <hr>
    <table class="table table-light table-striped">
        <tr>
            <th>Tên danh mục</th>

            <th>Sửa</th>

            <th>Xóa</th>

        </tr>
        <%
        categories.map(cate=>{%>
            <tr>
                <td>
                    <%= cate.name %>
                </td>
                <td><a href="/category/edit/<%= cate._id %>" class="btn btn-success">Sửa</a></td>
                <td>
                    <%- include('../part/deleteForm',{url:`/category/delete/${cate._id}`}) %>
                </td>
            </tr>
            <%})
%>
    </table>
</div>